<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App.startScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splashscreen</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.BikeBuddy</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">#F2FFFFFF</item>
        <item name="itemIconTint">@color/iconcolor_selector</item>
        <!-- Set the title text appearance -->
        <item name="android:textAppearance">@style/BottomNavigationTitleTextAppearance</item>
    </style>

    <style name="BottomNavigationTitleTextAppearance" parent="TextAppearance.Design.Tab">
        <!-- Set the text color using the color selector -->
        <item name="android:textColor">@color/titlecolor_selector</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>
