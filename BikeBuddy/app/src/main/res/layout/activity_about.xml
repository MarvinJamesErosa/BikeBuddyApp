<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".About">

        <!-- Your existing views go here -->

        <LinearLayout
            android:id="@+id/textlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/splashscreen"
            tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/backAbout"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="-4dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/white">

        </androidx.appcompat.widget.AppCompatButton>
            <TextView
                android:id="@+id/about_topbar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="-50dp"
                android:background="@color/ic_launcher_background"
                android:text="About"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="-60dp"
            android:text="About BikeBuddy"
            android:textSize="32sp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textlayout"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Explore, Navigate, and Ride with Bike Buddy – Your Ultimate Cycling Companion."
            android:background="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            tools:layout_editor_absoluteX="20dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:justificationMode="inter_word"
            android:text="BikeBuddy is a transformative initiative that focuses on ubiquitous challenges, such as inadequate access to transportation options, congested roadways, navigational difficulties, a lack of community, and the essential need to fight global warming. Making bicycling simple might make it a more alluring alternative and help assuage these concerns."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            tools:layout_editor_absoluteX="20dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="No matter who you are—a daily commuter, fitness enthusiast, tourist, hobbyist, or a bike courier—Bike Buddy is ready to support you with a comprehensive assortment of biking services. With our app, you can plan your travels, obtain and provide advice for riding and bike maintenance, and participate in a vibrant community forum. Connect with other cyclists, discuss your favorite routes, and even join cycling organizations. We make it simple and straightforward to locate new cycling trails and explore the metropolis on two wheels."
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:justificationMode="inter_word"
            tools:layout_editor_absoluteX="20dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="By utilizing Bike Buddy, you contribute to a sustainable mode of transportation that reduces traffic congestion, improves air quality, and enhances road safety for the entire community. It's not just about personal benefits; our app nurtures a sense of camaraderie among biking devotees, promoting a stronger community spirit. Moreover, Bike-sharing apps, courier services, and tourist companies can leverage our app for accurate directions and to advocate bicycling as a viable alternative mode of transportation.
Through BikeBuddy, we strive to transform the manner in which people travel and exercise, creating a healthier, more connected, and environmentally sustainable community."
            app:layout_constraintTop_toBottomOf="@id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:justificationMode="inter_word"
            tools:layout_editor_absoluteX="20dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="30dp"
            android:justificationMode="inter_word"
            android:text="Through BikeBuddy, we strive to transform the manner in which people travel and exercise, creating a healthier, more connected, and environmentally sustainable community."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

        <!-- Add more views as needed -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
