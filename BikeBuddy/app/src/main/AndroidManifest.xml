<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App.startScreen"
        tools:targetApi="31">
        <activity
            android:name=".About"
            android:exported="false"
            android:theme="@style/Theme.BikeBuddy"/>
        <activity
            android:name=".TermsConditions"
            android:exported="false"
            android:theme="@style/Theme.BikeBuddy" />
        <activity
            android:name=".PrivacyPolicy"
            android:exported="false"
            android:theme="@style/Theme.BikeBuddy" />
        <activity
            android:name=".ForgotPassword"
            android:exported="false"
            android:theme="@style/Theme.BikeBuddy" />
        <activity
            android:name=".EditProfile"
            android:exported="false"
            android:theme="@style/Theme.BikeBuddy" />

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchRoute"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false"
            android:theme="@style/Theme.BikeBuddy" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.App.startScreen" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.BikeBuddy" />



        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.google.android.places.API_KEY"
            android:value="@string/places_key" />
        <meta-data
            android:name="com.google.android.directions.API_KEY"
            android:value="@string/google_directions_key" />
    </application>

</manifest>